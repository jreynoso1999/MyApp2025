<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp2025"
        tools:targetApi="31">

        <!-- LoginActivity es la pantalla inicial -->
        <activity
            android:name=".ui.views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registrar MainActivity -->
        <activity android:name=".ui.views.MainActivity" android:exported="true"/>

        <!-- Registrar RegisterActivity -->
        <activity android:name=".ui.views.RegisterActivity" android:exported="true"/>

        <activity android:name=".ui.views.AdminActivity" android:exported="true"/>

    </application>
</manifest>
